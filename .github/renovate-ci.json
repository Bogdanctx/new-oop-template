{
  "enabledManagers": ["custom.regex"],
  "recreateWhen": "always",
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^\\.github\\/workflows\\/.*\\.ya?ml$/",
        "/^\\.github\\/actions\\/.*\\.ya?ml$/"
      ],
      "matchStrings": [
        "(?:^|\\r?\\n)(?<indentation>\\s*)#\\s?renovate:\\s+datasource=(?<datasource>\\S+)\\s+depName=(?<depName>\\S+)(?:\\s+versioning=(?<versioning>\\S+))?\\s*\\r?\\n\\s*uses:\\s*\\S*@(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "{{{datasource}}}",
      "depNameTemplate": "{{{depName}}}",
      "extractVersionTemplate": "^v?(?<version>.*)$",
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver-coerced{{/if}}",
      "autoReplaceStringTemplate":
        "{{{indentation}}}# renovate: datasource={{{datasource}}} depName={{{depName}}}{{#if versioning}} versioning={{{versioning}}}{{/if}}\n{{{indentation}}}uses: {{{depName}}}@v{{{newValue}}}"
    }
  ],
  "prConcurrentLimit": 0, 
  "prHourlyLimit": 0
}
